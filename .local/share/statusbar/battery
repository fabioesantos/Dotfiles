#!/bin/sh

INFO=$(acpi -b | head -n 1 | sed -rn 's/^.*, (.*?)%, ((.*?):[0-9]{2} )?(.*)$/\1 \3 \4/p')
BATTERY=$(echo ${INFO%% *})

[ "$(echo $INFO | grep charg)" ] && REMAIN="ðŸ”Œ"

# Low Battery warning
[ "$BATTERY" = "10" ] && notify-send "     Low Battery 10%" --icon=battery-caution

BATTERY_INFO="ðŸ”‹ $BATTERY% $REMAIN"

[ ! "$BATTERY" ] && BATTERY_INFO="ðŸ”‹ 100%"

echo "$BATTERY_INFO"
