#!/bin/sh

MPID="$(pidof mpd)"

[ "$MPID" ] &&
        INFO="$(mpc | sed 1q)" &&
        MUSIC="$(mpc | awk 'NR==2{print $3}')"

if [ -z "$MPID" ]; then
        STATUS="MPD disconnected"
elif [ -z "$MUSIC" ]; then
        STATUS="â—¼ Stopped"
else
        STATUS="ðŸŽµ $INFO ($MUSIC)"
fi

echo " $STATUS"
