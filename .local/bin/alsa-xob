#!/bin/sh

if [ $(amixer sget Master | awk 'NR==5{print $6}') = "[off]" ]; then
        echo 0 >> /tmp/xobpipe
else
        echo $(amixer get Master | tail -n1 | sed -r 's/.*\[(.*)%\].*/\1/') >> /tmp/xobpipe
fi

#kill "$(pstree -lp | grep -- -dwmstatus\([0-9] | sed "s/.*sleep(\([0-9]\+\)).*/\1/")"

kill -44 $(pidof dwmblocks)
