#!/bin/sh

choosen="$(echo 'Reboot\nPoweroff\nLock\nSuspend' | dmenu -p 'Power Menu:')"

case $choosen in
        Reboot) notify-send "  Rebooting..." & doas -n /sbin/shutdown -r now ;;
        Poweroff) notify-send "  Shutting down..." & doas -n /sbin/shutdown -h -P now ;;
        Lock) /usr/bin/slock ;;
        Suspend) /usr/bin/slock & doas -n /usr/sbin/s2ram ;;
esac
