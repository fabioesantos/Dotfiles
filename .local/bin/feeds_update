#!/bin/sh

feeds_dir="$XDG_DATA_HOME/sfeed/feeds/"

# Brasil de Fato
curl -s 'https://www.brasildefato.com.br/rss2.xml' | sfeed > $feeds_dir/brasil_de_fato

# G1
curl -s 'https://g1.globo.com/rss/g1/politica/' | sfeed > $feeds_dir/g1

# RT en español
curl -s 'https://actualidad.rt.com/feeds/all.rss' | sfeed > $feeds_dir/rt

# Opera Mundi
curl -s 'https://operamundi.uol.com.br/rss' | sfeed > $feeds_dir/"opera mundi"

/home/fabiosantos/.local/bin/notify-send " feeds updated!"
