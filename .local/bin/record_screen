#!/bin/sh

INRES="1360x768"
OUTRES="1360x768"
FPS="30"

ffmpeg -vaapi_device /dev/dri/renderD128 -f x11grab -thread_queue_size 1024 -s "$INRES" -r "$FPS" -i $DISPLAY.0 \
-f alsa -thread_queue_size 1024 -ac 2 \
-i default -vcodec libx264 -s "$OUTRES" \
-acodec libmp3lame -ab 128k -ar 44100 \
-threads 0 -f flv $1
