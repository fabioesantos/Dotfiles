#!/bin/sh

# This file runs when a DM logs you into a graphical session.
# If you use startx/xinit like a Chad, this file will also be sourced.

[ ! "$(/tmp/xobpipe)" ] && mkfifo /tmp/xobpipe &

setxkbmap -layout br &

xrandr --output eDP1 --off --output HDMI1 --mode 1360x768 --primary &

xrandr --dpi 96 &

xrdb -merge ~/.config/X11/Xresources &

xwallpaper --stretch Pictures/Wallpapers/amazing_mountain_milky_way_by_yakub_nihat-wallpaper-1366x768.jpg  &

gammastep &

dwmblocks &

xcompmgr -c -f -C -t-5 -l-5 -r4.2 -o.55 &

tail -f /tmp/xobpipe | xob -c ~/.config/xob/style.cfg -s i3 &
