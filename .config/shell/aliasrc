#!/bin/sh

# Aliases for the shell

# ls aliases
alias ls='/bin/ls --color=always -F --group-directories-first'
alias la='ls -a'
alias ll='ls -l'
alias lo='ls -al'

# use colors in grep and diff
alias grep='grep --color=auto'
alias egrep='grep -E --colour=auto'
alias fgrep='grep -F --colour=auto'
alias diff="diff --color=auto"

# confirm before overwriting something
alias cp="cp -iv"
alias mv='mv -iv'
alias rm='rm -iv'

# misc
alias startx='startx "$XINITRC" -- "$XSERVERRC" vt1'
alias weather='curl -sf wttr.in/Belo-Horizonte,BR'
alias neomutt='neomutt && pkill -RTMIN+11 dwmblocks'
alias lynx='lynx -cfg=~/.config/lynx/lynx.cfg -lss=~/.config/lynx/lynx.lss -vikeys'
alias abook='abook --config "$XDG_CONFIG_HOME"/abook/abookrc --datafile "$XDG_DATA_HOME"/abook/addressbook'
alias lf='lf-run'
alias ncmpcpp='ncmpcpp-ueberzug'
alias magit="vim -c MagitOnly"
